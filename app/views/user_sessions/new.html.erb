<% form_for @user_session, :url => login_path do |f| %>
  <%= f.error_messages :header_message => '提示', :message => '登录信息错误!', :header_tag => 'h3' %>
  <p><%= f.label :login %></p>
  <p><%= f.text_field :login %></p>

  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>
  
  <p><%= f.check_box :remember_me %><%= f.label :remember_me %></p>

  <p><%= f.submit %></p>
<% end %>
<%= link_to t('.register_link'), new_account_path %> | <%= link_to "忘记密码?", retrieve_password_path %>